{
    "name": "jest-puppeteer-react",
    "version": "7.1.1",
    "description": "screenshot tests for your react components in chromium using puppeteer & jest",
    "main": "src/index.js",
    "types": "src/index.d.ts",
    "bin": {
        "jestPuppeteerReactDebug": "./bin/debug.js"
    },
    "engines": {
        "node": ">= 10.13.0"
    },
    "scripts": {
        "pretest": "yalc publish && cd example && yalc add jest-puppeteer-react && yarn install",
        "test": "cd example && yarn test",
        "precommit": "pretty-quick --staged",
        "prettier": "prettier --write \"./**/*.js\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hapag-lloyd/jest-puppeteer-react.git"
    },
    "keywords": [
        "jest",
        "react",
        "puppeteer",
        "test",
        "testing"
    ],
    "author": "Ansgar Mertens <ansgar@elbstack.com>",
    "contributors": [
        "Jan Rosczak <jan.rosczak@hlag.com>",
        "Stefan Schult <stefan@elbstack.com>",
        "Albino Tonnina <https://github.com/albinotonnina>",
        "Timo Koenig <https://github.com/kaiserkoenig>",
        "Aleksei Androsov <https://github.com/doochik>",
        "Mihkel Eidast <https://github.com/mihkeleidast>"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/hapag-lloyd/jest-puppeteer-react/issues"
    },
    "homepage": "https://github.com/hapag-lloyd/jest-puppeteer-react#readme",
    "dependencies": {
        "debug": "^4.3.1",
        "docker-cli-js": "^2.8.0",
        "expect-puppeteer": "^4.4.0",
        "format-util": "^1.0.5",
        "glob": "^7.1.6",
        "jest-each": "^26.6.2",
        "jest-environment-node": "^26.6.2",
        "jest-environment-puppeteer": "^4.4.0",
        "jest-image-snapshot": "^4.4.0",
        "jest-puppeteer": "^4.4.0",
        "lodash.merge": "^4.6.2",
        "ora": "^5.3.0",
        "pretty-format": "^26.6.2"
    },
    "peerDependencies": {
        "jest": "26.x",
        "puppeteer": "*",
        "react": "16.x || 17.x",
        "react-dom": "16.x || 17.x",
        "webpack": "4.x || 5.x",
        "webpack-dev-server": "3.x"
    },
    "devDependencies": {
        "husky": "^4.3.8",
        "mkdirp": "^1.0.4",
        "prettier": "^2.2.1",
        "pretty-quick": "^3.1.0",
        "puppeteer": "^5.5.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "webpack": "^5.24.3",
        "webpack-dev-server": "^3.11.2",
        "yalc": "^1.0.0-pre.50"
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 140,
        "overrides": [
            {
                "files": "*.json",
                "options": {
                    "parser": "json"
                }
            },
            {
                "files": "*.md",
                "options": {
                    "parser": "markdown"
                }
            },
            {
                "files": "*.ts",
                "options": {
                    "parser": "typescript"
                }
            },
            {
                "files": "*.tsx",
                "options": {
                    "parser": "typescript"
                }
            },
            {
                "files": ".prettierrc",
                "options": {
                    "parser": "json"
                }
            },
            {
                "files": "*.html",
                "options": {
                    "parser": "html"
                }
            },
            {
                "files": "*.css",
                "options": {
                    "parser": "css"
                }
            }
        ]
    }
}
