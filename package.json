{
    "name": "jest-puppeteer-react",
    "version": "6.0.1",
    "description": "screenshot tests for your react components in chromium using puppeteer & jest",
    "main": "src/index.js",
    "types": "build/index.d.ts",
    "bin": {
        "jestPuppeteerReactDebug": "./bin/debug.js"
    },
    "engines": {
        "node": ">=v8.9"
    },
    "scripts": {
        "pretest": "cd example && yarn install",
        "test": "cd example && yarn test",
        "precommit": "pretty-quick --staged",
        "prettier": "prettier --write \"./**/*.js\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hapag-lloyd/jest-puppeteer-react.git"
    },
    "keywords": [
        "jest",
        "react",
        "puppeteer",
        "test",
        "testing"
    ],
    "author": "Ansgar Mertens <ansgar@elbstack.com>",
    "contributors": [
        "Jan Rosczak <jan.rosczak@hlag.com>",
        "Stefan Schult <stefan@elbstack.com>",
        "Albino Tonnina <https://github.com/albinotonnina>",
        "Timo Koenig <https://github.com/kaiserkoenig>",
        "Aleksei Androsov <https://github.com/doochik>"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/hapag-lloyd/jest-puppeteer-react/issues"
    },
    "homepage": "https://github.com/hapag-lloyd/jest-puppeteer-react#readme",
    "dependencies": {
        "debug": "^4.1.1",
        "docker-cli-js": "^2.7.1",
        "expect-puppeteer": "^4.4.0",
        "format-util": "^1.0.5",
        "glob": "^7.1.6",
        "jest-each": "^25.1.0",
        "jest-environment-node": "^25.1.0",
        "jest-environment-puppeteer": "4.4.0",
        "jest-image-snapshot": "^2.12.0",
        "jest-puppeteer": "^4.4.0",
        "lodash.merge": "^4.6.2",
        "node-fetch": "^2.6.0",
        "ora": "^4.0.3",
        "pretty-format": "^25.1.0",
        "webpack": "^4.41.6",
        "webpack-dev-server": "^3.10.3"
    },
    "peerDependencies": {
        "jest": "^25.1.0",
        "puppeteer": "^1.8.0",
        "react": "^16.2.0",
        "react-dom": "^16.2.0",
        "webpack": "^4.29.1"
    },
    "devDependencies": {
        "@babel/polyfill": "^7.8.3",
        "husky": "^4.2.2",
        "prettier": "^1.19.1",
        "pretty-quick": "^2.0.1",
        "puppeteer": "^2.1.1",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "yalc": "^1.0.0-pre.35"
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 140,
        "overrides": [
            {
                "files": "*.json",
                "options": {
                    "parser": "json"
                }
            },
            {
                "files": "*.md",
                "options": {
                    "parser": "markdown"
                }
            },
            {
                "files": "*.ts",
                "options": {
                    "parser": "typescript"
                }
            },
            {
                "files": "*.tsx",
                "options": {
                    "parser": "typescript"
                }
            },
            {
                "files": ".prettierrc",
                "options": {
                    "parser": "json"
                }
            },
            {
                "files": "*.html",
                "options": {
                    "parser": "html"
                }
            },
            {
                "files": "*.css",
                "options": {
                    "parser": "css"
                }
            }
        ]
    }
}
